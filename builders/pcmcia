# vim: set ft=sh:

build() {
  add_driver_classes drivers/pcmcia drivers/ide/legacy
  if (( ! $? )); then
    add_module sd_mod
  fi

  add_binary "/lib/udev/pcmcia-socket-startup"
  add_binary "/lib/udev/pcmcia-check-broken-cis"
  add_file "/lib/udev/rules.d/60-pcmcia.rules"
  add_file "/etc/pcmcia/config.opts"
}

helpmsg() {
  cat<<EOF
  This hook provides the necessary modules for a pcmcia root device.
EOF
}
